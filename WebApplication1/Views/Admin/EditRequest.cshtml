@model WebApplication1.Models.RequestEditViewModel

@{
    ViewData["Title"] = "Редагування заявки";
}

<h1>Редагування заявки</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditRequest">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" readonly="@(true)"/>
            </div>
            <div class="form-group">
                <label asp-for="Subject" class="control-label"></label>
                <input asp-for="Subject" class="form-control" readonly="@(true)"/>
            </div>
            <div class="form-group">
                <label asp-for="ApplicationDate" class="control-label"></label>
                @Html.DisplayFor(model => model.ApplicationDate)
                <input type="hidden" asp-for="ApplicationDate" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" asp-items="Html.GetEnumSelectList<StatusEnum>()"></select>
            </div>
            <div class="form-group">
                <label asp-for="Specialist" class="control-label"></label>
                <select asp-for="Specialist.Id" asp-items="@(new SelectList(Model.AvailableSpecialists, "Id", "FullName"))"></select>
                <span asp-validation-for="Specialist.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Зберегти" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Requests">Назад</a>
</div>

