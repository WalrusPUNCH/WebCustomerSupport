@model IEnumerable<WebApplication1.Models.RequestDetailsViewModel>

@{
    ViewData["Title"] = "Заявки";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Заявки</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subject)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Specialist)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Subject)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
            @if (item.Specialist != null)
            {
                @item.Specialist.ToString()
            }
            </td>
            <td>
                @if (item.Status == StatusEnum.Processed)
                {
                    @Html.ActionLink("Details", "DetailsRequest", new { id = item.Id })
                }
                
                else
                    @Html.ActionLink("Edit", "EditRequest", new { id = item.Id })
                |
                @Html.ActionLink("Delete", "DeleteRequest", new { id = item.Id })
            </td>
            </tr>
}
    </tbody>
</table>
